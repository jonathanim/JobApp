<div class="container-fluid bg d-flex align-items-center justify-content-center">


  <div >
    <h1 class="h1-sz">
      Jobby Job
    </h1>
    <h2 class="h2-sz ff">
      The place to find a job quickly and easy, start now
    </h2>
  </div>

</div>


<div class="card text-center">


  <div class="card-header">
    Latest Jobs
  </div>


  <div class="card-body">
    <h5 class="card-title"><%=@jobshow.job_type + "-"+@jobshow.position + "-" + @jobshow.company%></h5>
    <p class="card-text"> <%= @jobshow.description%></p>

    <p class="card-text">salary: <%= "$"+@jobshow.salary%> </p>
    <% if current_user == nil %>
    <a href="/users/sign_up" class="btn btn-primary">Sign up to view</a>
    <% else %>
      <a href="/jobs/<%=@jobshow.id%>" class="btn btn-primary">view</a>
    <% end %>
  </div>
  <div class="card-footer ">
    posted on: <%=@jobshow.created_at %>
  </div>
</div>
