<div class="container text-center center_div">
  <div class="center-mid">
    <%= form_with(model: job_application, local: true) do |form| %>
      <% if job_application.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(job_application.errors.count, "error") %> prohibited this job application from being saved:</h2>

          <ul>
          <% job_application.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <h2>Job Application</h2>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :Linkedin, 'Linkedin URL' %>
        <%= form.text_field :linkedin, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= form.label :other %>
        <%= form.text_field :other, class: 'form-control' %>
      </div>


      <div class="form-group">
        <%= form.label :job_id %>
        <%= form.select :job_id, options_for_select(Job.all.collect{|job| [job.position, job.id]}, @ja), :prompt => "select applying job", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :resume %>
        <%= form.file_field :resume, class: 'form-control' %>
      </div>


      <div class="actions">
        <%= form.submit%>
      </div>
    <% end %>

  </div>

  </div>
