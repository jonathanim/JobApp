<div class="container">


  <p id="notice"><%= notice %></p>

  <p>
    <strong>Position:</strong>
    <%= @job.position %>
  </p>

  <p>
    <strong>Job type:</strong>
    <%= @job.job_type %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= @job.company %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @job.description %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= @job.salary %>
  </p>

  <p>
    <strong>Bonus:</strong>
    <%= human_boolean(@job.bonus) %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= @job.created_at %>
  </p>


  <% if owner?(@job) %>
    <%= link_to 'Edit', edit_job_path(@job) %>
  <% end %>

  <%= link_to 'Back', jobs_path %>

  <%= link_to 'Apply Here', new_job_application_path  %>

  <%if owner?(@job)%>
    <h2>applicants</h2>
  <div>
    <% @job.job_applications.each do |ja| %>
    <p><%= ja.name %> / <%= link_to 'Show me Applicant', ja %></p>

    <% end %>
  </div>

  <% end %>

</div>
